generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Tweak {
  id                String            @id @default(auto()) @map("_id") @db.ObjectId
  userId            String?
  title             String
  description       String?
  short_description String?
  icon_url          String?
  author            String?
  savedUsers        String[]
  categoryId        String?           @db.ObjectId
  category          Category?         @relation(fields: [categoryId], references: [id])
  regedit           String?
  tweak_type        TweakType?
  isPublished       Boolean           @default(false)
  viewCount         Int               @default(0)
  downloadCount     Int               @default(0)
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @default(now())
  downloadedBy      DownloadedTweak[]
}

model UserProfile {
  id               String            @id @default(auto()) @map("_id") @db.ObjectId
  username         String
  email            String            @unique
  imageUrl         String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @default(now())
  downloadedTweaks DownloadedTweak[]
}

enum TweakType {
  Batch
  Registry
  PowerShell
  VBScript
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  tweaks    Tweak[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

model DownloadedTweak {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  userId       String      @db.ObjectId
  user         UserProfile @relation(fields: [userId], references: [id])
  tweakId      String      @db.ObjectId
  tweak        Tweak       @relation(fields: [tweakId], references: [id])
  downloadedAt DateTime    @default(now())
}
