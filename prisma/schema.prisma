generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Tweak {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  userId            String?
  title             String
  description       String?
  short_description String?
  icon_url          String?
  author            String?
  regedits          Regedit[]
  regeditID         String[]  @db.ObjectId
  savedUsers        String[]
  categoryId        String?   @db.ObjectId
  category          Category? @relation(fields: [categoryId], references: [id])
  isPublished       Boolean   @default(false)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @default(now())
}

model Regedit {
  id      String         @id @default(auto()) @map("_id") @db.ObjectId
  path    String
  entries RegeditEntry[]
  tweakId String         @db.ObjectId
  tweak   Tweak          @relation(fields: [tweakId], references: [id])
}

model RegeditEntry {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  key       String
  value     String
  regeditId String  @db.ObjectId
  regedit   Regedit @relation(fields: [regeditId], references: [id])
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  tweaks    Tweak[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
